      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.215" radius="0.294"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="1.57 0 0" />
      <mass value="1.525" />
      <inertia ixx="6.723e-3"
               ixy="0.0" iyy="6.723e-3"
               ixz="0.0" iyz="0.0" izz="1.220e-2" />
    </inertial>
  </link>

    <joint name="wheel_rear_right_joint" type="continuous">
    <parent link="rear_link"/>
    <child link="wheel_rear_right_link"/>
    <origin xyz="0 -0.4815 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_rear_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <mesh filename="$(find wagon_description)/meshes/wheels/Wheel.stl" scale="0.001 0.001 0.001"/>
      <!--
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.12"/>
        -->
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.215" radius="0.294"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="1.57 0 0" />
      <mass value="1.525" />
      <inertia ixx="6.723e-3"
               ixy="0.0" iyy="6.723e-3"
               ixz="0.0" iyz="0.0" izz="1.220e-2" />
    </inertial>
  </link>

    <joint name="wheel_rear_left_joint" type="continuous">
    <parent link="rear_link"/>
    <child link="wheel_rear_left_link"/>
    <origin xyz="0 0.4815 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_rear_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <mesh filename="$(find wagon_description)/meshes/wheels/Wheel.stl" scale="0.001 0.001 0.001"/>
      <!--
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.12"/>
        -->
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.215" radius="0.294"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="1.57 0 0" />
      <mass value="1.525" />
      <inertia ixx="6.723e-3"
               ixy="0.0" iyy="6.723e-3"
               ixz="0.0" iyz="0.0" izz="1.220e-2" />
    </inertial>
  </link>

</robot>